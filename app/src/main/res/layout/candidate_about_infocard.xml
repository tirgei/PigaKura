<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/candidate_details"
    android:layout_centerHorizontal="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/presidential_candidate"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/whiteText"
        android:textSize="20sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:civ_border_width="0.5dp"
        android:id="@+id/profile_candidate_pic"
        app:civ_border_color="@color/whiteText"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/candidate_name_text"
        android:text="Candidate Name"
        android:id="@+id/about_candidate_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/whiteText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteText"
        android:layout_marginTop="2dp"
        android:text="Jubilee Kenya"
        android:id="@+id/about_candidate_party"
        android:textSize="@dimen/party_name_text"/>

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:optRoundCardCornerRadius="4dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textSize="@dimen/party_name_text"
                android:textColor="@color/primaryText"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/candidate_info_text"
                android:padding="5dp"
                android:textColor="@color/primaryText"
                android:layout_marginTop="2dp"
                android:text="Candidate info will be here"/>

        </LinearLayout>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:optRoundCardCornerRadius="4dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manifesto"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textSize="@dimen/party_name_text"
                android:textColor="@color/primaryText"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/candidate_manifesto_text"
                android:padding="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/primaryText"
                android:text="Candidate info will be here"/>

        </LinearLayout>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">


            <com.github.captain_miao.optroundcardview.OptRoundCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:background="@color/colorAccent"
                android:id="@+id/running_mate_info"
                app:optRoundCardCornerRadius="4dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/running_mate_prof"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Running Mate"
                        android:textStyle="bold"
                        android:id="@+id/running_mate_info_name"
                        android:textColor="@color/primaryText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Running Mate"
                        android:textColor="@color/primaryText"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"/>

                </LinearLayout>

            </com.github.captain_miao.optroundcardview.OptRoundCardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">


            <com.github.captain_miao.optroundcardview.OptRoundCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:background="@color/colorAccent"
                android:id="@+id/party_info"
                app:optRoundCardCornerRadius="4dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/party_prof"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Party Name"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:id="@+id/party_info_name"
                        android:textColor="@color/primaryText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Political Party"
                        android:textColor="@color/primaryText"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textStyle="italic"/>

                </LinearLayout>

            </com.github.captain_miao.optroundcardview.OptRoundCardView>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
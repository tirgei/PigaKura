<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.masterclass.pigakura.activities.SplashActivity"
    android:background="#000000">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/app_logo_image"
        android:src="@drawable/ic_app_logo"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/app_logo_image"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textColor="@color/whiteText"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/app_logo_image"
        android:text="@string/motto"
        android:textSize="22sp"
        android:textColor="@color/whiteText"
        android:layout_marginTop="20dp"/>-->

    <ProgressBar
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/app_logo_image"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress_splash" />
</RelativeLayout>
